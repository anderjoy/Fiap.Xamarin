<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.MVVMBasic.View.NovoAlunoView">
    
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="RM" Text="{Binding AlunoModel.RM}" />
            <Entry Placeholder="Nome" Text="{Binding AlunoModel.Nome}" />
            <Entry Placeholder="Email" Text="{Binding AlunoModel.Email}" />

            <Button Text="Salvar" Command="{Binding InserirAluno}" />
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>